
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorProject.MainPage"
             Padding="{OnPlatform iOS='0,20,0,0'}"
            >

    <Grid
        Padding="5,0"
        ColumnSpacing="1"
        RowSpacing="1">

        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Label
            x:Name="result"
            Grid.Row="0"
            Grid.ColumnSpan="4"
            Padding="30"
            BackgroundColor="White"
            FontAttributes="Bold"
            FontSize="48"
            HorizontalTextAlignment="End"
            LineBreakMode="NoWrap"
            Text="0"
            TextColor="black"
            VerticalTextAlignment="Center" />

        <Button
            Grid.Row="1"
            Grid.ColumnSpan="2"
            BackgroundColor="LightGrey"
            Clicked="OnClear"
            CornerRadius="0"
            FontSize="36"
            Text="C"
            TextColor="black"/>

        <Button
            Grid.Row="1"
            Grid.Column="2"
            BackgroundColor="DimGray"
            Clicked="OnSquareRoot"
            CornerRadius="0"
            FontSize="36"
            Text="X^2"
            TextColor="white" />

        <Button
            Grid.Row="2"
            Grid.Column="0"
            BackgroundColor="DimGray"
            Clicked="OnNumberSelection"
            CornerRadius="0"
            FontSize="36"
            Text="7"
            TextColor="white" />
        
        <Button
            Grid.Row="2"
            Grid.Column="1"
            BackgroundColor="DimGray"
            Clicked="OnNumberSelection"
            CornerRadius="0"
            FontSize="36"
            Text="8"
            TextColor="white" />
        
        <Button
            Grid.Row="2"
            Grid.Column="2"
            BackgroundColor="DimGray"
            Clicked="OnNumberSelection"
            CornerRadius="0"
            FontSize="36"
            Text="9"
            TextColor="white" />

        <Button
            Grid.Row="3"
            Grid.Column="0"
            BackgroundColor="DimGray"
            Clicked="OnNumberSelection"
            CornerRadius="0"
            FontSize="36"
            Text="4"
            TextColor="white" />
        
        <Button
            Grid.Row="3"
            Grid.Column="1"
            BackgroundColor="DimGray"
            Clicked="OnNumberSelection"
            CornerRadius="0"
            FontSize="36"
            Text="5"
            TextColor="white" />
        
        <Button
            Grid.Row="3"
            Grid.Column="2"
            BackgroundColor="DimGray"
            Clicked="OnNumberSelection"
            CornerRadius="0"
            FontSize="36"
            Text="6"
            TextColor="white" />

        <Button
            Grid.Row="4"
            Grid.Column="0"
            BackgroundColor="DimGray"
            Clicked="OnNumberSelection"
            CornerRadius="0"
            FontSize="36"
            Text="1"
            TextColor="white" />
        
        <Button
            Grid.Row="4"
            Grid.Column="1"
            BackgroundColor="DimGray"
            Clicked="OnNumberSelection"
            CornerRadius="0"
            FontSize="36"
            Text="2"
            TextColor="white" />

        <Button
            Grid.Row="4"
            Grid.Column="2"
            BackgroundColor="DimGray"
            Clicked="OnNumberSelection"
            CornerRadius="0"
            FontSize="36"
            Text="3"
            TextColor="white" />
        
        <Button
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            BackgroundColor="DimGray"
            Clicked="OnNumberSelection"
            CornerRadius="0"
            FontSize="36"
            Text="0"
            TextColor="white" />

        <Button
            Grid.Row="1"
            Grid.Column="3"
            BackgroundColor="LightGray"
            Clicked="onOperatorSelection"
            CornerRadius="0"
            FontSize="36"
            Text="/"
            TextColor="black" />
        
        <Button
            Grid.Row="2"
            Grid.Column="3"
            BackgroundColor="LightGray"
            Clicked="onOperatorSelection"
            CornerRadius="0"
            FontSize="36"
            Text="*"
            TextColor="black" />
        
        <Button
            Grid.Row="3"
            Grid.Column="3"
            BackgroundColor="LightGray"
            Clicked="onOperatorSelection"
            CornerRadius="0"
            FontSize="36"
            Text="-"
            TextColor="black" />
        
        <Button
            Grid.Row="4"
            Grid.Column="3"
            BackgroundColor="LightGray"
            Clicked="onOperatorSelection"
            CornerRadius="0"
            FontSize="36"
            Text="+"
            TextColor="black" />
        
        <Button
            Grid.Row="5"
            Grid.Column="3"
            BackgroundColor="LightGray"
            Clicked="onCalculate"
            CornerRadius="0"
            FontSize="36"
            Text="="
            TextColor="black" />
    </Grid>
</ContentPage>
